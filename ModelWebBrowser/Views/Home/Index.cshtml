@model ModelWebBrowser.Models.IndexModel
@using ModelWebBrowser.Helpers
@using KAOSTools.MetaModel
@using System.Linq

<div class="row">

    <div class="span3"><div class="left-nav">
        <ul class="nav nav-tabs nav-stacked" data-spy="affix" data-offset-top="240">
          <li><a href="#goals">Goals</a></li>
          <li><a href="#antigoals">Anti-goals</a></li>
          <li><a href="#obstacles">Obstacles</a></li>
          <li><a href="#domprop">Domain properties</a></li>
          <li><a href="#domhyp">Domain hypothesis</a></li>
          <li><a href="#agents">Agents</a></li>
          <li><a href="#predicates">Predicates</a></li>
          <li><a href="#entities">Entities</a></li>
          <li><a href="#associations">Associations</a></li>
          <li><a href="#types">Given types</a></li>
        </ul>
    </div></div>

  <div class="span9">
  
    <!-- Goals -->
    
    <div class="section-header" style="margin-top: -25px;" id="goals">
    <h2>Goals</h2>
    </div>
    
    <h3>Goals summary</h3>
    
    <table class="table table-striped table-bordered">
      <tr><th>Name</th><th>Definition</th></tr>
      @foreach (var g in Model.Model.GoalModel.Goals) {
        @Summary(g);
      }
    </table>
    
    <h3>Goals details</h3>
   
    @foreach (var g in Model.Model.GoalModel.Goals) {
      var isRoot = Model.Model.GoalModel.Goals.Count (x => x.Refinements.Count (y => y.Subgoals.Contains (g)) > 0) == 0;
      var isResolvingGoal = Model.Model.GoalModel.Obstacles.Count (x => x.Resolutions.Count (y => y.ResolvingGoal == g) > 0) > 0;
      
      <h4 id="@g.Identifier">
     
        @g.FriendlyName
        
        @if (g.Implicit) {
          <span class="label label-info">Implicit</span>
        }
        
        @if (isRoot) {     
          <span class="label label-info">Root goal</span>
        }
      
        @if (isResolvingGoal) {
          <span class="label label-info">Resolution goal</span>
        }
      </h4>
      
      <table class="table table-striped table-bordered">
        @Identifier(g)
        @Name(g)
        @Definition(g)
        @FormalSpec(g)
      </table>
      
      <dl>
        @ParentGoals(g)
        @Refinements(g)
        @AgentAssignments(g)
        @Obstructions(g)
        @Resolving(g)
        @Assumptions(g)
        @Exceptions(g)
        @SourceReference(g)
      </dl>
      
      @TextExport(g)
        
      <hr class="spacer" />
    }
    
    <!-- / Goals -->
    
    <!-- Anti-goals -->
       
    <div class="section-header" style="margin-top: -25px;" id="antigoals">
    <h2>Anti-goals</h2>
    </div>
    
    <h3>Anti-goals summary</h3>
    
    <table class="table table-striped table-bordered">
      <tr><th>Name</th><th>Definition</th></tr>
      @foreach (var g in Model.Model.GoalModel.AntiGoals) {
        @Summary(g);
      }
    </table>
    
    <h3>Anti-goals details</h3>
   
    @foreach (var g in Model.Model.GoalModel.AntiGoals) {
      @Title(g)
      
      <table class="table table-striped table-bordered">
        @Identifier(g)
        @Name(g)
        @Definition(g)
        @FormalSpec(g)
      </table>
      
      <dl>
        @AntigoalRefinements(g)
        @AgentAssignments(g)
        @SourceReference(g)
      </dl>
      
      @TextExport(g)
        
      <hr class="spacer" />
    }
    
    <!-- / Anti-goals -->
    
    <!-- Obstacles -->

    <div class="section-header" id="obstacles">
      <h2>Obstacles</h2>
    </div>
    
    <h3>Obstacles summary</h3>
    
    <table class="table table-striped table-bordered">
      <tr><th>Name</th><th>Definition</th></tr>
      @foreach (var g in Model.Model.GoalModel.Obstacles) {
        @Summary(g);
      }
    </table>
    
    <h3>Obstacles details</h3>
    
    @foreach (var g in Model.Model.GoalModel.Obstacles) {
      @Title(g)
      
      <table class="table table-striped table-bordered">
        @Identifier(g)
        @Name(g)
        @Definition(g)
        @FormalSpec(g)
      </table>
      
      <dl>
        @ObstacleRefinements(g)
        @Resolutions(g)
        @AgentAssignments(g)
        @SourceReference(g)
      </dl>
      
      @TextExport(g)
      
      <hr class="spacer" />  
    }
    
    <!-- / Obstacles -->
      
    <!-- Domain Properties -->
    
    <div class="section-header" id="domprop">
        <h2>Domain Properties</h2>
    </div>
    
    <h3>Domain properties summary</h3>
    
    <table class="table table-striped table-bordered">
      <tr><th>Name</th><th>Definition</th></tr>
      @foreach (var g in Model.Model.GoalModel.DomainProperties) {
        @Summary(g);
      }
    </table>
    
    <h3>Domain properties details</h3>

    @foreach (var g in Model.Model.GoalModel.DomainProperties) {
      @Title(g)
      
      <table class="table table-striped table-bordered">
        @Identifier(g)
        @Name(g)
        @Definition(g)
        @FormalSpec(g)
      </table>
      
      <dl>
        @SourceReference(g)
      </dl>
      
      @TextExport(g)
      
      <hr class="spacer" />  
    } 
    
    <!-- / Domain Properties -->
    
    
    <!-- Domain Hypotheses -->
    
